{
  "name": "@wysteria/design",
  "type": "module",
  "version": "0.2.2",
  "description": "React Component Design System",
  "license": "MIT",
  "author": {
    "name": "Waseem Polus",
    "url": "https://github.com/waseem-polus"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "wui"
  ],
  "homepage": "https://github.com/waseem-polus/wui-design",
  "files": [
    "dist"
  ],
  "main": "./dist/wui-design.umd.cjs",
  "module": "./dist/wui-design.js",
  "exports": {
    ".": {
      "import": "./dist/wui-design.js",
      "require": "./dist/wui-design.umd.cjs"
    }
  },
  "scripts": {
    "tw": "npx tailwindcss -i ./src/index.css -o ./src/output.css",
    "start": "vite",
    "build": "npm run tw && vite build",
    "preview": "vite preview",
    "test": "vitest --coverage",
    "test:ci": "npm run test -- run",
    "test:ui": "npm run test -- --ui",
    "test:watch": "npm run test -- --watch",
    "dry": "npm publish --dry-run",
    "pub": "npm publish --access public"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.1",
    "classnames": "^2.3.2",
    "lucide-react": "^0.263.1",
    "tailwind-merge": "^2.5.2",
    "vite-plugin-css-injected-by-js": "^3.3.0"
  },
  "peerDependencies": {
    "react": "^18",
    "react-dom": "^18",
    "tailwindcss": "^3.4.10"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.3",
    "tailwindcss": "^3.4.10",
    "vite": "^4.4.5"
  }
}
